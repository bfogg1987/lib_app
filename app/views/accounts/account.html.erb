<h1>Your Account</h1>

<h2> Checked Out Books </h2>

<table>
	<thead>
		<tr>
			<th>Title</th>
	      	<th>Author</th>
	      	<th>Publication Date</th>
	      	<th>Serial Number</th>
	      	<th></th>
	      	<th colspan="3"></th>
    	</tr>
    </thead>

    <tbody>
    	<% @books.each do |book| %>
      	<tr>
	        <td><%= book.title %></td>
	        <td><%= book.author %></td>
	        <td><%= book.publication_date %></td>
	        <td><%= book.serial_number %></td>

	        <td>
	          <% if book.available? %>
	            <%= button_to "Check Out", check_out_book_path(book) %>
	          <% elsif book.checked_out_by==current_user %>
	            <%= button_to "Check In", check_in_book_path(book) %>
	          <% else %>
	            <%= "Currently Unavailable" %>
	          <% end %>
	        </td>

	        <td><%= link_to 'Show', book %></td>
	        <td><%= link_to 'Edit', edit_book_path(book) %></td>
	        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      	</tr>
    	<% end %>
  	</tbody>
</table>

<h3><%=link_to 'Back to All Books', books_path%></h3>